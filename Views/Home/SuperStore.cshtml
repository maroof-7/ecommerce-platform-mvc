<link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Our SuperStore";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h1>Our SuperStore Experience</h1>
    
    <div class="card mt-4">
        <div class="card-body">
            <h3>More Than Just a Store</h3>
            <p>Our SuperStore locations are designed to be destinations, offering an unparalleled shopping experience with:</p>
            
            <div class="row mt-3">
                <div class="col-md-4">
                    <div class="feature-icon">
                        <i class="fas fa-tshirt fa-3x text-primary"></i>
                    </div>
                    <h5>Curated Collections</h5>
                    <p>Expertly selected products for every lifestyle</p>
                </div>
                <div class="col-md-4">
                    <div class="feature-icon">
                        <i class="fas fa-utensils fa-3x text-primary"></i>
                    </div>
                    <h5>Food Hall</h5>
                    <p>Gourmet dining options for every taste</p>
                </div>
                <div class="col-md-4">
                    <div class="feature-icon">
                        <i class="fas fa-child fa-3x text-primary"></i>
                    </div>
                    <h5>Family Fun</h5>
                    <p>Play areas and activities for kids</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="card mt-4">
        <div class="card-header bg-primary text-white">
            <h4>Find a SuperStore Near You</h4>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="locationSearch">Enter your ZIP code:</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="locationSearch" placeholder="e.g. 90210">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="button">Search</button>
                    </div>
                </div>
            </div>
            
            <div id="storeResults" class="mt-3">
                <!-- Store results will appear here -->
            </div>
        </div>
    </div>
</div>