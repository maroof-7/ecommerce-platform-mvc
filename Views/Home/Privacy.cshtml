@{
    ViewData["Title"] = "Privacy Policy";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Maroof7 Zenith</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Custom Dark Theme CSS -->
    <link rel="stylesheet" href="~/css/privacy.css" asp-append-version="true" />
</head>

<body>
    <!-- Hero Section -->
    <div class="hero-container">
        <div class="hero-content">
            <h1 class="hero-title">Privacy Policy <i class="fas fa-lock"></i></h1>
            <p class="hero-subtitle">Your Privacy, Our Priority</p>
            <p class="hero-text">Shop with confidence knowing your data is protected</p>

            <ul class="hero-features">
                <li><i class="fas fa-shield-alt"></i> Secure data encryption</li>
                <li><i class="fas fa-user-secret"></i> Strict confidentiality</li>
                <li><i class="fas fa-check-circle"></i> Transparent practices</li>
            </ul>
        </div>
    </div>

    <!-- Privacy Content -->
    <div class="privacy-card">
        <div class="privacy-section">
            <h3><i class="fas fa-info-circle"></i> Information We Collect</h3>
            <p>We may collect personal information such as your name, email address, and phone number when you register
                on our site or fill out a form.</p>
        </div>

        <div class="privacy-section">
            <h3><i class="fas fa-cogs"></i> How We Use Your Information</h3>
            <p>We use the information we collect to provide, maintain, and improve our services, as well as to
                communicate with you about your account and our offerings.</p>
        </div>

        <div class="privacy-section">
            <h3><i class="fas fa-shield-alt"></i> Security</h3>
            <p>We take reasonable measures to protect your personal information from unauthorized access, use, or
                disclosure.</p>
        </div>

        <div class="privacy-section">
            <h3><i class="fas fa-sync-alt"></i> Changes to This Policy</h3>
            <p>We may update this Privacy Policy from time to time. Any changes will be posted on this page, and we
                encourage you to review it periodically.</p>
        </div>

        <!-- Back to Dashboard Button -->
        <a href="/" class="btn-back">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</body>

</html>