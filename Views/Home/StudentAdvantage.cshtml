<link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Student Advantage";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h1>Student Advantage Program</h1>
    
    <div class="card mt-4">
        <div class="card-header bg-primary text-white">
            <h4>Exclusive Savings for Students</h4>
        </div>
        <div class="card-body">
            <p>We believe in supporting education by offering special discounts to students, teachers, and school administrators.</p>
            
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="benefit-card">
                        <i class="fas fa-percentage fa-3x text-primary"></i>
                        <h5>10% Off All Purchases</h5>
                        <p>Show your valid student ID at checkout to receive your discount.</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="benefit-card">
                        <i class="fas fa-shipping-fast fa-3x text-primary"></i>
                        <h5>Free Shipping</h5>
                        <p>Free standard shipping on all orders over $25 for registered students.</p>
                    </div>
                </div>
            </div>
            
            <div class="mt-4">
                <h5>How to Register</h5>
                <ol>
                    <li>Create an account on our website</li>
                    <li>Upload a copy of your current student ID or school registration</li>
                    <li>Receive verification email within 24 hours</li>
                    <li>Start saving!</li>
                </ol>
                <a href="#" class="btn btn-primary mt-3">Register Now</a>
            </div>
        </div>
    </div>
</div>