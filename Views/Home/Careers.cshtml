<link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Career Opportunities";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h1>Join Our Team</h1>
    
    <div class="card mt-4">
        <div class="card-body">
            <h3>Why Work With Us?</h3>
            <p>We're more than just a company - we're a community. When you join our team, you become part of a family that values:</p>
            
            <ul class="list-group list-group-flush mt-3">
                <li class="list-group-item">Competitive compensation and benefits</li>
                <li class="list-group-item">Opportunities for growth and advancement</li>
                <li class="list-group-item">A positive, inclusive work environment</li>
                <li class="list-group-item">Flexible scheduling options</li>
                <li class="list-group-item">Employee discounts and perks</li>
            </ul>
        </div>
    </div>
    
    <div class="card mt-4">
        <div class="card-header bg-primary text-white">
            <h4>Current Openings</h4>
        </div>
        <div class="card-body">
            <div class="job-listing">
                <h5>Retail Sales Associate</h5>
                <p><strong>Location:</strong> Multiple locations | <strong>Type:</strong> Full-time/Part-time</p>
                <p>Engage with customers, provide product knowledge, and create exceptional shopping experiences.</p>
                <a href="#" class="btn btn-sm btn-primary">Apply Now</a>
            </div>
            
            <div class="job-listing mt-3">
                <h5>Inventory Specialist</h5>
                <p><strong>Location:</strong> Distribution Center | <strong>Type:</strong> Full-time</p>
                <p>Manage product flow and maintain accurate inventory records in our state-of-the-art facility.</p>
                <a href="#" class="btn btn-sm btn-primary">Apply Now</a>
            </div>
            
            <div class="job-listing mt-3">
                <h5>E-Commerce Developer</h5>
                <p><strong>Location:</strong> Corporate HQ | <strong>Type:</strong> Full-time</p>
                <p>Help build and maintain our digital shopping platforms and customer experiences.</p>
                <a href="#" class="btn btn-sm btn-primary">Apply Now</a>
            </div>
        </div>
    </div>
</div>