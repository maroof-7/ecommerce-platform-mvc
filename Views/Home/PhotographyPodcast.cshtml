@{
    ViewData["Title"] = "Photography Podcast";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h1>Through the Lens: Our Photography Podcast</h1>
    
    <div class="card mt-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h3>Latest Episode</h3>
                    <div class="podcast-player mt-3">
                        <h4>Episode 42: Mastering Landscape Photography</h4>
                        <p class="text-muted">Published: June 15, 2023</p>
                        <audio controls class="w-100 mt-2">
                            <source src="~/podcasts/episode42.mp3" type="audio/mpeg">
                            Your browser does not support the audio element.
                        </audio>
                        <p class="mt-3">Join professional photographer Sarah Johnson as she shares her tips for capturing breathtaking landscape images.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <h5>Subscribe</h5>
                    <div class="podcast-subscribe mt-3">
                        <a href="#" class="btn btn-outline-dark btn-block mb-2">
                            <i class="fab fa-apple"></i> Apple Podcasts
                        </a>
                        <a href="#" class="btn btn-outline-dark btn-block mb-2">
                            <i class="fab fa-spotify"></i> Spotify
                        </a>
                        <a href="#" class="btn btn-outline-dark btn-block mb-2">
                            <i class="fas fa-rss"></i> RSS Feed
                        </a>
                    </div>
                    
                    <h5 class="mt-4">Upcoming Episodes</h5>
                    <ul class="list-group">
                        <li class="list-group-item">Portrait Lighting Techniques (June 22)</li>
                        <li class="list-group-item">Editing with Lightroom (June 29)</li>
                        <li class="list-group-item">Interview with National Geographic Photographer (July 6)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    
    <div class="card mt-4">
        <div class="card-header bg-primary text-white">
            <h4>Episode Archive</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Episode</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Listen</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>41</td>
