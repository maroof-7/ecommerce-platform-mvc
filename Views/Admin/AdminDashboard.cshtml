@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Custom Dark Theme CSS -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>

<body>
    <!-- Hero Section -->
    <div class="hero-container">
        <div class="hero-content">
            <h1 class="hero-title">Welcome Back, Admin! <span class="wave">👋</span></h1>
            <p class="hero-subtitle">We're thrilled to have you here. Your efforts are driving the success of
                <strong>Maroof7 Zenith</strong>.</p>
            <p class="hero-text">Here's what you can do today:</p>

            <ul class="hero-features">
                <li><i class="fas fa-chart-line"></i> Monitor sales and analytics to track performance</li>
                <li><i class="fas fa-boxes"></i> Manage products, inventory, and orders efficiently</li>
                <li><i class="fas fa-users"></i> Engage with customers and resolve queries promptly</li>
                <li><i class="fas fa-rocket"></i> Explore new features to enhance the shopping experience</li>
            </ul>

            <p class="hero-cta-text">Remember, every small step you take contributes to big achievements!</p>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container-fluid admin-container">
        <div class="row g-0">
            <!-- Sidebar -->
            <div class="col-md-3 sidebar">
                <div class="sidebar-header">
                    <h2><i class="fas fa-sliders-h"></i> Dashboard</h2>
                </div>
                <ul class="sidebar-menu">
                    <li><a href="/admin/admindashboard" class="active"><i class="fas fa-home"></i> Home</a></li>
                    <li><a href="/admin/createproduct"><i class="fas fa-plus-circle"></i> Create Products</a></li>
                    <li><a href="/admin/Myproducts"><i class="fas fa-list-ul"></i> Products List</a></li>
                    <li><a href="/admin/Users"><i class="fas fa-user-friends"></i> Users</a></li>
                    <li><a href="/admin/analytics"><i class="fas fa-chart-pie"></i> Analytics</a></li>
                    <li><a href="/admin/settings"><i class="fas fa-cogs"></i> Settings</a></li>
                </ul>
                <div class="sidebar-footer">
                    <div class="user-profile">
                        <img src="https://via.placeholder.com/40" alt="Admin" class="profile-img">
                        <div class="profile-info">
                            <span class="username">Admin User</span>
                            <span class="role">Super Admin</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content Area -->
            <div class="col-md-9 main-content">
                <!-- Stats Cards -->
                <div class="row stats-row">
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-icon" style="background-color: rgba(58, 134, 255, 0.2);">
                                <i class="fas fa-shopping-cart" style="color: var(--primary);"></i>
                            </div>
                            <div class="stat-info">
                                <h3 id="total-orders">Loading...</h3>
                                <p>Total Orders</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-icon" style="background-color: rgba(40, 167, 69, 0.2);">
                                <i class="fas fa-dollar-sign" style="color: var(--success);"></i>
                            </div>
                            <div class="stat-info">
                                <h3 id="total-revenue">Loading...</h3>
                                <p>Total Revenue</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-icon" style="background-color: rgba(255, 193, 7, 0.2);">
                                <i class="fas fa-users" style="color: #ffc107;"></i>
                            </div>
                            <div class="stat-info">
                                <h3 id="total-customers">Loading...</h3>
                                <p>Customers</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-icon" style="background-color: rgba(220, 53, 69, 0.2);">
                                <i class="fas fa-box-open" style="color: #dc3545;"></i>
                            </div>
                            <div class="stat-info">
                                <h3 id="low-stock">Loading...</h3>
                                <p>Low Stock</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
                <!-- Chart Section -->
                <div class="chart-card">
                    <div class="card-header">
                        <h3><i class="fas fa-chart-line"></i> Sales Overview</h3>
                        <div class="time-filter">
                            <button class="btn-time active">Week</button>
                            <button class="btn-time">Month</button>
                            <button class="btn-time">Year</button>
                        </div>
                    </div>
                    <div class="card-body">
                        <canvas id="salesChart"></canvas>
                    </div>
                </div>

                <!-- Recent Orders Table -->
                <div class="recent-orders">
                    <div class="card-header">
                        <h3><i class="fas fa-clock"></i> Recent Orders</h3>
                        <a href="#" class="view-all">View All</a>
                    </div>
                    <div class="table-responsive">
                        <table class="orders-table">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>#ORD-7589</td>
                                    <td>John Smith</td>
                                    <td>Today, 10:30 AM</td>
                                    <td>$245.99</td>
                                    <td><span class="status delivered">Delivered</span></td>
                                    <td><button class="btn-view">View</button></td>
                                </tr>
                                <tr>
                                    <td>#ORD-7588</td>
                                    <td>Sarah Johnson</td>
                                    <td>Today, 9:15 AM</td>
                                    <td>$189.50</td>
                                    <td><span class="status shipped">Shipped</span></td>
                                    <td><button class="btn-view">View</button></td>
                                </tr>
                                <tr>
                                    <td>#ORD-7587</td>
                                    <td>Michael Brown</td>
                                    <td>Yesterday, 4:45 PM</td>
                                    <td>$320.00</td>
                                    <td><span class="status processing">Processing</span></td>
                                    <td><button class="btn-view">View</button></td>
                                </tr>
                                <tr>
                                    <td>#ORD-7586</td>
                                    <td>Emily Davis</td>
                                    <td>Yesterday, 2:20 PM</td>
                                    <td>$175.25</td>
                                    <td><span class="status pending">Pending</span></td>
                                    <td><button class="btn-view">View</button></td>
                                </tr>
                                <tr>
                                    <td>#ORD-7585</td>
                                    <td>Robert Wilson</td>
                                    <td>Yesterday, 11:10 AM</td>
                                    <td>$420.75</td>
                                    <td><span class="status cancelled">Cancelled</span></td>
                                    <td><button class="btn-view">View</button></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div> 




