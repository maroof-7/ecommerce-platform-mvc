﻿@{
    ViewData["Title"] = "Deleted Products";
}


<link rel="stylesheet" href="~/css/productlist.css" asp-append-version="true" />


<div class="container">
    <!-- Navigation Links for Active, Archived, and Deleted Products -->
    <div class="mb-3">
        <a class="btn btn-primary" asp-controller="Admin" asp-action="ProductList">Active Products</a>
        <a class="btn btn-warning" asp-controller="Admin" asp-action="MyArchive">Archived Products</a>
        <a class="btn btn-danger" asp-controller="Admin" asp-action="DeletedProducts">Deleted Products</a>
        <a class="btn btn-success" asp-controller="Admin" asp-action="FeaturedProducts">Featured Products</a>

    </div>


    <div class="table-responsive">
        <table id="my-table" class="table-dark table-bordered table-striped">



            <thead>
                <tr>
                    <th>Image</th>
                    <th>Product Title</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>SubCategory</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Hash tags</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>
                            <!-- Display product image with a fallback if URL is missing -->
                            <img src="@(product.ProductPicURl ?? "/images/fallback-image.png")" alt="@product.ProductTitle"
                                class="img-fluid" style="max-width: 100px; height: auto;">
                        </td>
                        <td>@product.ProductTitle</td>
                        <td>@product.Description</td>
                        <td>@product.Category</td>
                        <td>@product.SubCategory</td>
                        <td>@product.Price $</td>
                        <td>@product.Qty</td>
                        <td>@product.HashTags</td>
                        <td>

                            <a asp-action="RestoreFromRecycle" asp-controller="Admin" asp-route-id="@product.ProductId"
                                class="btn btn-primary btn-sm" style="padding: 5px 20px;"> Restore</a>

                        </td>

                    </tr>
                }



            </tbody>



        </table>






    </div>