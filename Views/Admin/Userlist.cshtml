@model IEnumerable<DummyProject.Models.DomainModel.User>

<link rel="stylesheet" href="~/css/userlist.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Users List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-content-container">
    <h2 class="admin-section-title"><i class="fa-solid fa-users"></i> Users List</h2>
    <div class="user-table-wrapper">
        <table class="user-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Registered</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int i = 1;
                    foreach (var user in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@user.Username</td>
                            <td>@($"{user.FirstName} {user.LastName}")</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>@user.DateCreated.ToString("yyyy-MM-dd")</td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No users found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
