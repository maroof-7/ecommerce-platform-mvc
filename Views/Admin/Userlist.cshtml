    ViewData["Title"] = "Users";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Custom Users CSS -->
    <link rel="stylesheet" href="~/css/userlist.css" asp-append-version="true" />
</head>

<body>
    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 sidebar">
                <h2>Dashboard</h2>
                <ul>
                    <li><a href="#"><i class="fas fa-home"></i> Home</a></li>
                    <li><a href="/admin/createproduct"><i class="fas fa-box"></i> Create Products</a></li>
                    <li><a href="/admin/Myproducts"><i class="fas fa-list"></i> Products List</a></li>
                    <li><a href="/admin/Users" class="active"><i class="fas fa-user"></i> Users</a></li>
                    <li><a href="/admin/analytics"><i class="fas fa-chart-line"></i> Analytics</a></li>
                    <li><a href="/admin/settings"><i class="fas fa-cog"></i> Settings</a></li>
                </ul>
            </div>

            @model List<User>

            <h1 class="users-heading">Users</h1>

            <!-- User Count Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h3><i class="fas fa-users"></i> Total Users</h3>
                </div>
                <div class="card-body">
                    <p class="user-count">@Model.Count</p>
                </div>
            </div>

            <!-- Users Table -->
            <div class="card mb-4">
                <div class="card-header">
                    <h3><i class="fas fa-table"></i> User List</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@user.Id</td>
                                        <td>@user.Name</td>
                                        <td>@user.Email</td>
                                        <td>@user.Role</td>
                                        <td>
                                            <button class="btn btn-sm btn-primary"><i class="fas fa-edit"></i> Edit</button>
                                            <button class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Delete</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html> *@