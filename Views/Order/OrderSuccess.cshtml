@{
    ViewData["Title"] = "Order Success";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/ordersuccess.css" />

<div class="payment-complete-container">
    <div class="payment-complete-card">
        <div class="payment-checkmark">
            <svg viewBox="0 0 52 52">
                <circle class="checkmark-circle" cx="26" cy="26" r="25" fill="none" />
                <path class="checkmark-check" fill="none" d="M14 27l7 7 16-16" />
            </svg>
        </div>
        <h2 class="payment-title">Order Successful!</h2>
        <p class="payment-message">
            Thank you for your purchase.<br>
            Your Order has been completed and your order will be Shipped soon.<br>
            You will receive an email confirmation shortly.
        </p>
        <a class="shop-more-btn" asp-controller="Home" asp-action="shop">
            <i class="fa-solid fa-store"></i>
            <span>Continue Shopping</span>
        </a>

    </div>
</div>