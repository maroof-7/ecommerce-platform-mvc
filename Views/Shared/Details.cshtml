@{
    ViewData["Title"] = "Details";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- Font Awesome Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
<!-- Custom Dark Theme CSS -->
<link rel="stylesheet" href="~/css/details.css" asp-append-version="true" />

@model DummyProject.Models.ViewModel.HybridViewModel;

<main class="customer-greeting">
    <h1>Welcome to Maroof7 Zenith👋</h1>
    <p class="lead">Shop the best quality products, great prices, and fast shipping—all in one place.</p>
    <p>Here's what you can do today:</p>
    <ul>
        <li>Fresh picks just for you. Shop the latest before they’re gone!</li>
        <li>Customer favorites you’ll love. See what’s trending now.</li>
        <li>Save big on select items. Shop now before they’re gone!</li>
        <li>Your perfect purchase is just a click away. Happy shopping!</li>
    </ul>
    <p>Remember, every small step you take contributes to big achievements. Keep up the great work!</p>
</main>

<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Shop Your Products!</h1>
                </div>
            </div>
            <div class="col-lg-7">
                <!-- Space for image -->
            </div>
        </div>
    </div>
</div>

<div class="product-details-section">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-5 col-lg-4 mb-5">
                <img src="@Model.Product.ProductPicURl" class="img-fluid product-thumbnail" alt="Product Image">
            </div>
            <div class="col-12 col-md-7 col-lg-8 mb-5">
                <h2 class="product-title">@Model.Product.ProductTitle</h2>
                @if (Model.Product.IsArchived)
                {
                    <p class="product-status text-danger">Product Unavailable</p>
                }
                else
                {
                    <p class="product-status">Available: <span>@Model.Product.Qty</span></p>
                }
                <p class="product-description">@Model.Product.Description</p>
                <h4 class="product-price">&#8377 @Model.Product.Price</h4>
                @if (!Model.Product.IsArchived)
                {
                    <div class="product-actions">
                        <a class="btn btn-primary" asp-controller="Product" asp-action="AddToCart"
                            asp-route-ProductId="@Model.Product.ProductId">Add To Cart</a>
                        <a class="btn btn-secondary" href="#">Order Now</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="recommendations-section">
    <div class="container">
        <h2>You may also like</h2>
        <!-- Add recommended products here -->
    </div>
</div>